{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "isolatedModules": true,
        "noImplicitAny": true,
        "removeComments": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}